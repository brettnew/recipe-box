<h2>Tags</h2>
<hr>
<br>

<% if @tags == [] %>

<p>There are currently no tags in the database</p>

<% else %>

<p>All Tags</p>
<ul>

  <% @tags.each() do |tag| %>

  <li><a href="/tags/<%= tag.id() %>"><%= tag.description() %></a></li>

  <% end %>

</ul>

<% end %>

<h3> Add a tag: </h3>
<form action="/tags" method="post">
  <label for="tag_description">Enter a new tag to create:  </label>
  <input type="text" name="tag_description" id="tag_description">
  <button type="submit">Add Tag</button>
</form>
