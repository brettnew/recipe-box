<h1>Rename <%=@recipe.name() %> </h1>

<form action="/recipes/<%= @recipe.id() %>/edit" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="recipe_name">Rename your recipe:</label>
  <input id="recipe_name" name="recipe_name" type="text">

  <button type="submit">Update</button>
</form>

<form action="/recipes/<%= @recipe.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <h5>Delete <%= @recipe.name %>?</h5>
  <button type="submit">Delete Recipe</button>
</form>

<form id="delete_ingredient" action="/recipes/<%= @recipe.id() %>/ingredient" method="post" >
  <input type="hidden" name="_method" value="delete">
<label for="recipe_select">Select the Ingredient:  </label>
  <br>
<select id="ingredient_id" name="ingredient_id">
  <% @recipe.ingredients.each() do |ingredient| %>
    <option value="<%= ingredient.id() %>"><%= ingredient.name() %></option>
  <% end %>
</select>
<button type="submit">Delete Ingredient</button>
</form>

<form action="/recipes/<%= @recipe.id() %>/instructions" method="post">
  <input type="hidden" name="_method" value="patch" >
  <label for="instructions">Enter Instructions below</label>
  <br>
  <textarea name="instructions" rows="6" cols="40" id="instructions"><%= @recipe.instructions() %></textarea>
  <br>
  <button type="submit">Update Instructions</button>
</form>
